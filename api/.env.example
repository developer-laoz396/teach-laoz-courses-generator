# Variables de entorno para el servidor API de logging

# Puerto del servidor
PORT=3001

# Ruta a la base de datos SQLite
DB_PATH=../database/logs.db

# Días de retención de logs (se eliminan logs más antiguos)
LOG_RETENTION_DAYS=30

# Origen permitido para CORS (* permite todos)
CORS_ORIGIN=*

# Entorno de ejecución (development, production)
NODE_ENV=development

# Nivel de logging (combined, common, dev, short, tiny)
LOG_LEVEL=dev
